<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <!-- dotnet pack Nuget Config stuff -->
    <PropertyGroup>
        <PackageId>MonoGame.Aseprite</PackageId>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://monogameaseprite.net</PackageProjectUrl>
        <PackageIcon>icon.png</PackageIcon>
        <PackageTags>
            MonoGame;Aseprite;import;processes;read;write;sprite;animation;tileset;tilemap;spritesheet;pipeline;mgcb
        </PackageTags>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageReleaseNotes>Version 4.0.0-prerelease</PackageReleaseNotes>
        <Description>
            MonoGame.Aseprite is a cross-platofrm C# library that adds support to MonoGame projects for
            Aseprite (.asepirte/.ase) files.
        </Description>
    </PropertyGroup>

    <!-- Includes for the dotnet pack NuGet package generation. -->
    <ItemGroup>
        <None Include="..\..\.nuget\img\icon.png" Pack="true" PackagePath="" />
        <None Include="..\..\.\.nuget\README.md" Pack="true" PackagePath="" />
        <Content Include="..\MonoGame.Aseprite.Content.Pipeline\bin\Debug\net6.0\MonoGame.Aseprite.Content.Pipeline.dll" Pack="true" PackagePath="\pipeline"/>
    </ItemGroup>

    <!-- Nuget Package References -->
    <ItemGroup>
        <PackageReference Include="MonoGame.Framework.DesktopGL" Version="3.8.1.303">
            <PrivateAssets>All</PrivateAssets>
        </PackageReference>
    </ItemGroup>


    <!-- Local Project References -->
    <ItemGroup>
        <ProjectReference Include="..\MonoGame.Aseprite.Common\MonoGame.Aseprite.Common.csproj" />
        <ProjectReference Include="..\MonoGame.Aseprite.Content.Pipeline\MonoGame.Aseprite.Content.Pipeline.csproj">
            <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
        </ProjectReference>
    </ItemGroup>

    <!-- Allow the test project to use internal types for testing -->
    <ItemGroup>
        <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
            <_Parameter1>MonoGame.Aseprite.Tests</_Parameter1>
        </AssemblyAttribute>
    </ItemGroup>

    <!-- Warning Supressions -->
    <PropertyGroup>
        <!-- Supress warning about Pipeline dll not being in lib folder for NuGet -->
        <NoWarn>NU5100</NoWarn>
    </PropertyGroup>
</Project>